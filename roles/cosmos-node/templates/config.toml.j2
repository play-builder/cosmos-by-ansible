proxy_app = "tcp://127.0.0.1:26658"
moniker = "{{ moniker }}"
db_backend = "goleveldb"
db_dir = "data"
log_level = "{{ log_level | default('info') }}"
log_format = "{{ log_format | default('plain') }}"
genesis_file = "config/genesis.json"
priv_validator_key_file = "config/priv_validator_key.json"
priv_validator_state_file = "data/priv_validator_state.json"
priv_validator_laddr = ""
node_key_file = "config/node_key.json"
abci = "socket"
filter_peers = false
[rpc]
laddr = "tcp://127.0.0.1:{{ rpc_port | default(26657) }}"
cors_allowed_origins = []
cors_allowed_methods = ["HEAD", "GET", "POST"]
cors_allowed_headers = ["Origin", "Accept", "Content-Type", "X-Requested-With", "X-Server-Time"]
grpc_laddr = ""
grpc_max_open_connections = 900
unsafe = false
max_open_connections = 900
max_subscription_clients = 100
max_subscriptions_per_client = 5
experimental_subscription_buffer_size = 200
experimental_websocket_write_buffer_size = 200
experimental_close_on_slow_client = false
timeout_broadcast_tx_commit = "10s"
max_body_bytes = 1000000
max_header_bytes = 1048576
tls_cert_file = ""
tls_key_file = ""
pprof_laddr = ""
[p2p]
laddr = "tcp://0.0.0.0:{{ p2p_port | default(26656) }}"
external_address = "{{ ansible_host }}:{{ p2p_port | default(26656) }}"
seeds = "{{ seeds | default('') }}"
persistent_peers = "{{ persistent_peers | default('') }}"
upnp = false
addr_book_file = "config/addrbook.json"
addr_book_strict = {{ addr_book_strict | default(true) | lower }}
max_num_inbound_peers = {{ max_num_inbound_peers | default(40) }}
max_num_outbound_peers = {{ max_num_outbound_peers | default(10) }}
unconditional_peer_ids = "{{ unconditional_peer_ids | default('') }}"
persistent_peers_max_dial_period = "0s"
flush_throttle_timeout = "100ms"
max_packet_msg_payload_size = 1024
send_rate = 5120000
recv_rate = 5120000
pex = {{ pex | default(true) | lower }}
seed_mode = {{ seed_mode | default(false) | lower }}
private_peer_ids = "{{ private_peer_ids | default('') }}"
allow_duplicate_ip = false
handshake_timeout = "20s"
dial_timeout = "3s"
[mempool]
version = "v0"
recheck = true
broadcast = true
wal_dir = ""
size = {{ mempool_size | default(5000) }}
max_txs_bytes = {{ mempool_max_txs_bytes | default(1073741824) }}
cache_size = {{ mempool_cache_size | default(10000) }}
keep-invalid-txs-in-cache = false
max_tx_bytes = 1048576
max_batch_bytes = 0
ttl-duration = "0s"
ttl-num-blocks = 0
[statesync]
enable = {{ state_sync_enabled | default(false) | lower }}
rpc_servers = "{{ state_sync_rpc_servers | default('') }}"
trust_height = {{ state_sync_trust_height | default(0) }}
trust_hash = "{{ state_sync_trust_hash | default('') }}"
trust_period = "168h0m0s"
discovery_time = "15s"
temp_dir = ""
chunk_request_timeout = "10s"
chunk_fetchers = "4"
[blocksync]
version = "v0"
[consensus]
wal_file = "data/cs.wal/wal"
timeout_propose = "{{ timeout_propose | default('3s') }}"
timeout_propose_delta = "500ms"
timeout_prevote = "{{ timeout_prevote | default('1s') }}"
timeout_prevote_delta = "500ms"
timeout_precommit = "{{ timeout_precommit | default('1s') }}"
timeout_precommit_delta = "500ms"
timeout_commit = "{{ timeout_commit | default('5s') }}"
double_sign_check_height = 0
skip_timeout_commit = false
create_empty_blocks = true
create_empty_blocks_interval = "0s"
peer_gossip_sleep_duration = "100ms"
peer_query_maj23_sleep_duration = "2s"
[storage]
discard_abci_responses = false
[tx_index]
indexer = "{{ indexer | default('kv') }}"
psql-conn = ""
[instrumentation]
prometheus = {{ prometheus_enabled | default(true) | lower }}
prometheus_listen_addr = ":{{ prometheus_port | default(26660) }}"
max_open_connections = 3
namespace = "{{ chain_name | default('cosmos') }}"
