[Unit]
Description=Cosmos Exporter for {{ chain_name | default('cosmos') }}
Documentation=https://github.com/solarlabsteam/cosmos-exporter
Wants=network-online.target
After=network-online.target
[Service]
User=cosmos_exporter
Group=cosmos_exporter
Type=simple
ExecStart=/usr/local/bin/cosmos-exporter \
    --tendermint-rpc="http://localhost:{{ rpc_port | default(26657) }}" \
    --node="localhost:{{ grpc_port | default(9090) }}" \
    --denom="{{ denom }}" \
    --denom-coefficient=1000000 \
    --bech-prefix="{{ chain_name | replace('-', '') }}" \
    --listen-address=":{{ cosmos_exporter_port | default(9300) }}" \
    --log-level="info"
SyslogIdentifier=cosmos-exporter
Restart=always
RestartSec=10
[Install]
WantedBy=multi-user.target
